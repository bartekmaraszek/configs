[user]
	email = b.maraszek@email.com
	name = Bart Maraszek
[color]
    diff = auto
    status = auto
    branch = auto
    ui = auto
[alias]
	# List all aliases in case I forget
	alias = "!git config -l | grep alias | cut -c 7-"
	la = "!git config -l | grep alias | cut -c 7-"
	b = branch
	cp = cherry-pick
	g = grep --break --heading --line-number

	#Modify config
	ec = config --global -e
	# Workflow
		## General
	st = status
		## Adding files
	a = add
	#aa = add --all && git reset src/main/resources/*.properties 
	aa = !git add -u && git add . && git status
		## committing
	f = fetch -a --prune
	co = checkout
	cob = checkout -b
    c = commit -m
    ci = commit -m
	cm = !git add . && git commit -m
	amend = commit --amend
		## stashing
	sa = stash apply
	ss = stash save
	sl = stash list
		## diffs
	di = diff
	dc = diff --cached


	# The complex stuff
    up = !git fetch origin && git rebase origin/master
	ir = !git rebase -i origin/master
	done = !git fetch && git rebase origin/master && git checkout master && git merge @{-1}
	cleanup = !git remote prune origin && git gc && git clean -dfx && git stash clear
	save = !git add -A && git commit -m 'SAVEPOINT'
	wip = commit -am "WIP"
	undo = reset HEAD~1 --mixed

	# LOGS
    #lg = log --graph --decorate --pretty=oneline --abbrev-commit -n 50
    lg = log --graph --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate
	ls = log --graph --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate
	# List all changed files per commit
	ll = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --numstat
	# Logs with date
	lsd = log --pretty=format:"%C(yellow)%h\\ %ad%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --date=short
	lds = log --pretty=format:"%C(yellow)%h\\ %ad%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --date=short
	# Relative date
	ld = log --pretty=format:"%C(yellow)%h\\ %ad%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --date=relative
[core]
    pager = less -x4
	excludesfile = /Users/bart.maraszek/.gitignore_global
	autocrlf = input
	filemode = false
[diff]
  tool = meld
[difftool]
  prompt = false
[difftool "meld"]
  trustExitCode = true
  cmd = open -W -a Meld --args \"$LOCAL\" \"$PWD/$REMOTE\"
[merge]
  tool = meld
[mergetool]
  prompt = false
[mergetool "meld"]
  trustExitCode = true
  cmd = open -W -a Meld --args --auto-merge \"$PWD/$LOCAL\" \"$PWD/$BASE\" \"$PWD/$REMOTE\" --output=\"$PWD/$MERGED\"
[pull]
	ff = only
[git-p4]
	skipSubmitEdit = true
	skipSubmitEditCheck = true
[apply]
	ignorewhitespace = change
[credential]
	helper = osxkeychain
[filter "lfs"]
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path = 
[mergetool "sourcetree"]
	cmd = /Applications/Sourcetree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true
